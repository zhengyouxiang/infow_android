<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
   android:background="@drawable/bottompic"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    >
    <TextView
        android:id="@+id/tab1"
        android:text="新闻"
        android:gravity="center_horizontal"
         
        android:layout_alignParentLeft="true"
        android:layout_width="64dip"
        android:layout_height="wrap_content"        
        >
    </TextView>
   
    <TextView
        android:id="@+id/tab2"
        android:text="微博"
        android:gravity="center_horizontal"

        android:layout_toRightOf="@id/tab1"    
        android:layout_width="64dip"
        android:layout_height="wrap_content"    
        >
    </TextView>
  
    <TextView
        android:id="@+id/tab3"
        android:text="消息"
        android:gravity="center_horizontal"
     
        android:layout_toRightOf="@id/tab2"
        android:layout_width="64dip"
        android:layout_height="wrap_content"        
        >
    </TextView>
    
    <TextView
        android:id="@+id/tab4"
        android:text="广场"
        android:gravity="center_horizontal"
    
        android:layout_toRightOf="@id/tab3"
        android:layout_width="64dip"
        android:layout_height="wrap_content"        
        >
    </TextView>
  
     <TextView
        android:id="@+id/tab5"
        android:text="设置"
        android:gravity="center_horizontal"
      
        android:layout_toRightOf="@id/tab4"
        android:layout_width="64dip"
        android:layout_height="wrap_content"        
        >
    </TextView>
</RelativeLayout>

